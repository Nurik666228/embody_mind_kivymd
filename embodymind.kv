<MathTrueFalseGame>:
    name: "MathTrueFalseGame"
    MenuBackground:
    MDIconButton:
        icon: "home"
        pos_hint: {"center_x": 0.5, "center_y": 0.97}
        on_press: app.play_click_sound()
        on_release:
            root.manager.transition = NoTransition()
            root.manager.current = "GamesMenu"

    BoxLayout:
        pos_hint: {'center_x': 0.2, 'center_y': 0.9}
        size_hint: (0.5, 0.1)
        MDLabel:
            text: root.score + str(root.score_value)
            halign: 'center'
            font_style: "Subtitle1"

    BoxLayout:
        pos_hint: {'center_x': 0.2, 'center_y': 0.85}
        size_hint: (0.5, 0.1)
        MDLabel:
            id: timer
            text: root.timer_text + str(root.timer)
            halign: 'center'
            font_style: "Subtitle1"

    ProgressBar:
        id: timer_bar
        max: 5
        value: 5
        pos_hint: {'center_x': 0.5, 'center_y': 0.80}
        size_hint: (0.8, 0.1)

    BoxLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.65}
        size_hint: (0.7, 0.1)
        MDLabel:
            text: root.math_problem
            halign: 'center'
            font_style: "H4"


    MDRectangleFlatButton:
        md_bg_color: 245/255, 245/255, 220/255
        line_color: 176/255,0,0,1
        text: root.false_btn
        pos_hint: {'center_x': 0.25, 'center_y': 0.35}
        size_hint: (0.4, 0.05)
        line_width: 1.3
        font_style: "Button"
        on_press: app.play_click_sound()
        on_release:
            root.check_if_false()

    MDRectangleFlatButton:
        md_bg_color: 245/255, 245/255, 220/255
        line_color: 176/255,0,0,1
        text: root.true_btn
        pos_hint: {'center_x': 0.75, 'center_y': 0.35}
        size_hint: (0.4, 0.05)
        line_width: 1.3
        font_style: "Button"
        on_press: app.play_click_sound()
        on_release:
            root.check_if_true()




# класс отвечающий за задний фон всех меню
<MenuBackground@FloatLayout>:
     # создание заднего фона
    canvas.before:
        Color:
            # цвет ниже это rgb(255, 229, 180)
            rgba: (255/255, 183/255, 80/255, 1)
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size