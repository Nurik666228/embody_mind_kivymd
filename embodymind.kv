#: import NoTransition kivy.uix.screenmanager.NoTransition

<WindowManager>:
    MainMenu:
    SettingsMenu:
    GamesMenu:
    GuessTheNumberMenu:
    GuessTheNumberGame:
    MathTrueFalseMenu:
    MathTrueFalseGame:

<MainMenu>:
    name: "MainMenu"
    MenuBackground:
    LabelUnderline:
    BoxLayout:
        id: game_title
        pos_hint: {'center_x': 0.5, 'center_y': 0.85}
        size_hint: (0.5, 0.1)
        MDLabel:
            text: 'Embody Mind'
            halign: 'center'
            font_style: "H5"

    MDRectangleFlatButton:
        id: play_button
        md_bg_color: 245/255, 245/255, 220/255
        line_color: 176/255,0,0,1
        text: root.play_btn
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        size_hint: (0.5, 0.09)
        line_width: 1.5
        font_style: "Button"
        on_press: app.play_click_sound()
        on_release:
            root.manager.transition = NoTransition()
            root.manager.current = "GamesMenu"

    MDRectangleFlatButton:
        id: settings_button
        md_bg_color: 245/255, 245/255, 220/255
        line_color: 176/255,0,0,1
        text: root.settings_btn
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        size_hint: (0.5, 0.09)
        line_width: 1.5
        font_style: "Button"
        on_press: app.play_click_sound()
        on_release:
            root.manager.transition = NoTransition()
            root.manager.current = "SettingsMenu"

    MDRectangleFlatButton:
        id: quit_button
        md_bg_color: 245/255, 245/255, 220/255
        line_color: 176/255,0,0,1
        text: root.quit_btn
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        size_hint: (0.5, 0.09)
        line_width: 1.5
        font_style: "Button"
        on_press: app.play_click_sound()
        on_release:
            root.show_quit_dialog()

<LabelUnderline@FloatLayout>:
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1.5
            points: (0 + self.width / 4, self.height - self.height * 20 / 100, self.width - self.width / 4, self.height - self.height * 20 / 100)


<SettingsMenu>:
    name: "SettingsMenu"
    MenuBackground:
    SettingsLine:
    # верхняя менюшка
    MDTopAppBar:
        id: settings_top_bar
        pos_hint: {"right": 1, "top": 1}
        elevation: 0
        title: root.title
        anchor_title: "left"
        md_bg_color: "#616161"
        left_action_items: [["arrow-left", lambda x: root.return_to_main_menu()]]

    BoxLayout:
        id: music_label
        pos_hint: {'center_x': 0.25, 'center_y': 0.8}
        size_hint: (0.5, 0.1)
        MDLabel:
            text: root.music_label
            halign: "center"
            font_style: "H6"

    AnchorLayout:
        id: music_switch
        pos_hint: {'center_x': .75, 'center_y': 0.786}
        BigTouchSwitch:
            active: self.music_state
            on_active: root.check_music_state()

    BoxLayout:
        id: sound_label
        pos_hint: {'center_x': 0.25, 'center_y': 0.7}
        size_hint: (0.5, 0.1)
        MDLabel:
            text: root.sounds_label
            halign: "center"
            font_style: "H6"

    AnchorLayout:
        id: sounds_switch
        pos_hint: {'center_x': .75, 'center_y': 0.686}
        BigTouchSwitch:
            active: self.sound_state
            on_active: root.check_sounds_state()

    BoxLayout:
        id: language_label
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        size_hint: (0.5, 0.1)
        MDLabel:
            text: root.language_label
            halign: "center"
            font_style: "H6"

    MDRectangleFlatButton:
        id: english_btn
        md_bg_color: 245/255, 245/255, 220/255
        line_color: 176/255,0,0,1
        text: "Қазақша"
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        size_hint: (0.4, 0.05)
        line_width: 1.3
        font_style: "Button"
        on_press: app.play_click_sound()
        on_release: root.change_language("kaz")

    MDRectangleFlatButton:
        id: russian_btn
        md_bg_color: 245/255, 245/255, 220/255
        line_color: 176/255,0,0,1
        text: "Русский"
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}
        size_hint: (0.4, 0.05)
        line_width: 1.3
        font_style: "Button"
        on_press: app.play_click_sound()
        on_release: root.change_language("ru")

    MDRectangleFlatButton:
        id: kazakh_btn
        md_bg_color: 245/255, 245/255, 220/255
        line_color: 176/255,0,0,1
        text: "English"
        pos_hint: {'center_x': 0.5, 'center_y': 0.25}
        size_hint: (0.4, 0.05)
        line_width: 1.3
        font_style: "Button"
        on_press: app.play_click_sound()
        on_release: root.change_language("en")

# кастомная кнопка выключатель/включатель
<BigTouchSwitch>:
    #increases the area that responds to touch
    size_hint: None, None
    size: switch.size[0] + dp(45), switch.size[1] + dp(0)
    MDSwitch:
        id: switch
        active: root.active

<SettingsLine@FloatLayout>:
    # полоска под лейблом "язык"
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1.5
            points: (0 + self.width / 4, self.height - self.height * 45 / 100, self.width - self.width / 4, self.height - self.height * 45 / 100)


