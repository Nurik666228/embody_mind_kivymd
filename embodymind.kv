<WindowManager>:
    MainMenu:

<MainMenu>:
    LabelUnderline:

    MDRectangleFlatButton:
        id: play_button
        text: "Play"
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        size_hint: (0.5, 0.09)
        line_width: 1.5
        font_style: "Button"
        on_release:

    MDRectangleFlatButton:
        id: settings_button
        text: "Settings"
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        size_hint: (0.5, 0.09)
        line_width: 1.5
        font_style: "Button"
        on_release:


    MDRectangleFlatButton:
        id: quit_button
        text: "Quit"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        size_hint: (0.5, 0.09)
        line_width: 1.5
        font_style: "Button"
        on_release:
            root.show_quit_dialog()

<LabelUnderline@FloatLayout>:
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1.5
            points: (0 + self.width / 4, self.height - self.height * 16.7 / 100, self.width - self.width / 4, self.height - self.height * 16.7 / 100)


# класс отвечающий за задний фон всех меню
# времмено не используется
<MenuBackground@FloatLayout>:
     # создание заднего фона
    canvas.before:
        Color:
            # цвет ниже это rgb(255, 229, 180)
            rgba: (255/255, 229/255, 180/255, 1)
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size