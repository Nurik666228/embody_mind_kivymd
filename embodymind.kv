<GuessTheNumberMenu>:
    name: "GuessTheNumberMenu"
    FloatLayout:
        MenuBackground:
        MDTopAppBar:
            id: games_top_bar
            pos_hint: {"right": 1, "top": 1}
            elevation: 0
            title: root.top_title
            anchor_title: "left"
            md_bg_color: "#616161"
