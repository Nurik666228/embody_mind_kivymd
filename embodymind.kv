            on_press: app.play_click_sound()
            on_release:
                root.manager.transition = NoTransition()
                root.manager.current = "GuessTheNumberGame"

        BoxLayout:
            id: GTN_game_name
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            size_hint: (0.5, 0.1)
            MDLabel:
                text: root.game_name
                halign: 'center'
                font_style: "H5"

        BoxLayout:
            id: GTN_game_info
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint: (0.5, 0.1)
            MDLabel:
                text: root.game_description
                halign: 'center'
                font_style: "Subtitle1"


<GuessTheNumberGame>:
    name: "GuessTheNumberGame"
    MenuBackground:
    MDIconButton:
        icon: "home"
        pos_hint: {"center_x": 0.5, "center_y": 0.97}
        on_press: app.play_click_sound()
        on_release:
            root.manager.transition = NoTransition()
            root.manager.current = "GamesMenu"

    BoxLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.65}
        size_hint: (0.5, 0.1)
        MDLabel:
            text: root.game_label_text
            halign: 'center'
            font_style: "H5"

    MDTextField:
        id: number_input
        hint_text: "1-1000"
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        size_hint: (0.5, None)
        input_filter: 'int'

    MDRectangleFlatButton:
        id: GTN_enter_number
        md_bg_color: 245/255, 245/255, 220/255
        line_color: 176/255,0,0,1
        text: root.enter_btn
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}
        size_hint: (0.3, 0.05)
        line_width: 1.3
        font_style: "Button"
        on_press: app.play_click_sound()
        on_release:
            root.check_number()
            number_input.text = ""

